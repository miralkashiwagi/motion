---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mb-8">
  {categories.map(category => (
    <a href={`${import.meta.env.BASE_URL}/categories/${category.name.toLowerCase().replace(/\s+/g, '-')}/`} class="group">
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 transition-all duration-300 hover:shadow-lg hover:-translate-y-1 hover:bg-indigo-50 dark:hover:bg-indigo-900/20">
        <div class="flex items-center mb-4">
          <div 
            class="w-10 h-10 flex items-center justify-center rounded-full text-white mr-3 transition-colors" 
            style={`background-color: ${category.color};`}
            set:html={icons[category.icon]} 
          />
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white group-hover:text-indigo-600 dark:group-hover:text-indigo-400 transition-colors">
            {category.name}
          </h3>
        </div>
        <p class="text-sm text-gray-600 dark:text-gray-400">
          {category.description}
        </p>
      </div>
    </a>
  ))}
</div>
