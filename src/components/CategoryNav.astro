---
import { categoryMapping } from '../content/config';
---

<div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4">
  {Object.entries(categoryMapping).map(([categoryName, data]) => (
    <a 
      href={`${import.meta.env.BASE_URL}/categories/${data.id}`} 
      class="bg-white dark:bg-gray-800 p-4 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 hover:shadow-md transition-shadow"
      data-category={data.id}
      aria-label={`${categoryName}カテゴリーを表示`}
    >
      <div class="flex items-center">
        <div 
          class="flex-shrink-0 w-12 h-12 rounded-full flex items-center justify-center mr-3" 
          style={`background-color: ${data.color}20;`}
        >
          <svg 
            xmlns="http://www.w3.org/2000/svg" 
            fill="none" 
            viewBox="0 0 24 24" 
            stroke-width="1.5" 
            stroke={data.color} 
            class="w-6 h-6"
            aria-hidden="true"
          >
            {data.icon === 'cursor' && (
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.042 21.672L13.684 16.6m0 0l-2.51 2.225.569-9.47 5.227 7.917-3.286-.672zM12 2.25V4.5m5.834.166l-1.591 1.591M20.25 10.5H18M7.757 14.743l-1.59 1.59M6 10.5H3.75m4.007-4.243l-1.59-1.59" />
            )}
            {data.icon === 'bars-3' && (
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
            )}
            {data.icon === 'arrow-down' && (
              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 13.5L12 21m0 0l-7.5-7.5M12 21V3" />
            )}
            {data.icon === 'text' && (
              <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 8.25h9m-9 3H12m-9.75 1.51c0 1.6 1.123 2.994 2.707 3.227 1.129.166 2.27.293 3.423.379.35.026.67.21.865.501L12 21l2.755-4.133a1.14 1.14 0 01.865-.501 48.172 48.172 0 003.423-.379c1.584-.233 2.707-1.626 2.707-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0012 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018z" />
            )}
            {data.icon === 'arrow-path' && (
              <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182m0-4.991v4.99" />
            )}
          </svg>
        </div>
        <div>
          <h3 class="font-medium text-gray-900 dark:text-white">{categoryName}</h3>
        </div>
      </div>
      <p class="mt-3 text-sm text-gray-600 dark:text-gray-400">{data.description}</p>
    </a>
  ))}
</div>
