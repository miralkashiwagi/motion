    id: 'hover-effects', 
    name: 'ホバーエフェクト', 
    description: 'マウスホバー時のインタラクティブなアニメーション効果',
    icon: 'cursor',
    color: '#4f46e5'
  },
  { 
    id: 'scroll-animations', 
    name: 'スクロールアニメーション', 
    description: 'スクロールに連動した表示効果とパララックス',
    icon: 'arrow-down',
    color: '#0891b2'
  },
  { 
    id: 'text-animations', 
    name: 'テキストアニメーション', 
    description: '文字の動きとタイピング効果',
    icon: 'text',
    color: '#0d9488'
  },
  { 
    id: 'loading-animations', 
    name: 'ローディングアニメーション', 
    description: '読み込み中の表示とスケルトンUI',
    icon: 'arrow-path',
    color: '#c026d3'
  },
  { 
    id: 'menu-animations', 
    name: 'メニュー展開効果', 
    description: 'ナビゲーションメニューの開閉アニメーション',
    icon: 'bars-3',
    color: '#ea580c'
  },
  { 
    id: 'others', 
    name: 'その他', 
    description: 'その他の効果',
    icon: 'info',
    color: '#7c3aed'
