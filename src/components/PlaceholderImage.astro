---
interface Props {
  text?: string;
  bgColor?: string;
  textColor?: string;
  className?: string;
}

const {
  text = 'アニメーションプレビュー',
  bgColor = '#4f46e5',
  textColor = '#ffffff',
  className = '',
} = Astro.props;
---

<div
  class={`flex items-center justify-center overflow-hidden ${className}`}
  style={`width: 100%; height: 100%; background-color: ${bgColor}; color: ${textColor};`}
  role="img"
  aria-label={text}
>
  <div class="text-center p-4">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 mx-auto mb-2" aria-hidden="true">
      <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 7.5l3 2.25-3 2.25m4.5 0h3m-9 8.25h13.5A2.25 2.25 0 0021 18V6a2.25 2.25 0 00-2.25-2.25H5.25A2.25 2.25 0 003 6v12a2.25 2.25 0 002.25 2.25z" />
    </svg>
    <p class="text-lg font-semibold [word-break:auto-phrase]">{text}</p>
  </div>
</div>
